<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
        Title="Weather App" Height="450" Width="400"
        Background="#1E1E2F">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="🌤 Weather App" 
                       Foreground="White" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBox x:Name="CityTextBox" 
                     Text="Введи название города"
                     FontSize="16"
                     Padding="8"
                     Foreground="Gray"
                     GotFocus="CityTextBox_GotFocus"
                     LostFocus="CityTextBox_LostFocus"/>

            <Button x:Name="SearchButton"
                    Content="Узнать погоду"
                    FontSize="16"
                    Margin="0,10,0,20"
                    Click="SearchButton_Click"/>
            
            <Button x:Name="SwitchSourceButton"
                    Content="Сменить источник"
                    FontSize="14"
                    Margin="0,0,0,20"
                    Click="SwitchSourceButton_Click"/>
            
            <TextBlock x:Name="WeatherText"
                       Foreground="White"
                       FontSize="18"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
